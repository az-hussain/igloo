{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "Bash(git:*)",
      "Bash(date:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(cat:*)",
      "Bash(uuidgen)",
      "mcp__imsg__*",
      "mcp__gog__*"
    ]
  },
  "mcpServers": {
    "imsg": {
      "command": "node",
      "args": ["__IGLOO_DIR__/mcp/imsg-server.js"]
    },
    "gog": {
      "command": "node",
      "args": ["__IGLOO_DIR__/mcp/gog-server.js"]
    }
  }
}
