{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "mcp__imsg__*",
      "mcp__gog__*"
    ]
  },
  "mcpServers": {
    "imsg": {
      "command": "node",
      "args": ["__IGLOO_DIR__/mcp/imsg-server.js"]
    },
    "gog": {
      "command": "node",
      "args": ["__IGLOO_DIR__/mcp/gog-server.js"]
    }
  }
}
